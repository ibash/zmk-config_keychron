		lock_mac: lock_mac {
			label = "lock_mac";
			compatible = "zmk,behavior-macro";
			#binding-cells = <0>;
			bindings =
				<&macro_press   &kp LCTRL>,
				<&macro_press   &kp LCMD>,
				<&macro_tap     &kp Q>,
				<&macro_release &kp LCMD>,
				<&macro_release &kp LCTRL>;
		};

		lock_win: lock_win {
			label = "lock_mac";
			compatible = "zmk,behavior-macro";
			#binding-cells = <0>;
			bindings =
				<&macro_press   &kp RWIN>,
				<&macro_tap     &kp L>,
				<&macro_release &kp RWIN>;
		};
	};

