/dts-v1/;
#include <freq.h>
#include <mem.h>
#include <st/l4/stm32l432.dtsi>
#include <st/l4/stm32l432k(b-c)ux-pinctrl.dtsi>
#include <dt-bindings/zmk/matrix_transform.h>
#include <dt-bindings/zmk/ckled2001.h>

/ {
	model = "Keychron Q3";
	compatible = "keychron,q3";

	chosen {
		zephyr,code-partition = &code_partition;
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
		zmk,kscan = &kscan;
		zmk,matrix_transform = &default_transform;
		zmk,underglow = &led_strip;
	};

  /*
	sensors {
		compatible = "zmk,keymap-sensors";
		sensors = <&encoder>;
	};
*/

  /*
	gpio_ex: sn74hc595 {
		compatible = "ti,sn74hc595-bitbang";
		gpio-controller;
		#gpio-cells = <2>;
		ser-gpios = <&gpioa 7 0>;
		srclk-gpios = <&gpiob 1 0>;
		rclk-gpios = <&gpiob 0 0>;
	};
  */

  /* From qmk keyboards/keychron/q3/ansi/info.json
     "rows": ["B5", "B4", "B3", "A15", "A14", "A13"],
     "cols": ["C14", "C15", "A0", "A1", "A2", "A3", "A4", "A5", "A6", "A7", "B0", "B1", "A8", "A9", "A10", "H3"]
  */

	kscan: kscan {
		compatible = "zmk,kscan-gpio-matrix";

		diode-direction = "col2row";
		col-gpios = <&gpioc 14  GPIO_ACTIVE_LOW>,
		            <&gpioc 15  GPIO_ACTIVE_LOW>,
		            <&gpioa  0  GPIO_ACTIVE_LOW>,
		            <&gpioa  1  GPIO_ACTIVE_LOW>,
		            <&gpioa  2  GPIO_ACTIVE_LOW>,
		            <&gpioa  3  GPIO_ACTIVE_LOW>,
		            <&gpioa  4  GPIO_ACTIVE_LOW>,
		            <&gpioa  5  GPIO_ACTIVE_LOW>,
		            <&gpioa  6  GPIO_ACTIVE_LOW>,
		            <&gpioa  7  GPIO_ACTIVE_LOW>,
		            <&gpiob  0  GPIO_ACTIVE_LOW>,
		            <&gpiob  1  GPIO_ACTIVE_LOW>,
		            <&gpioa  8  GPIO_ACTIVE_LOW>,
		            <&gpioa  9  GPIO_ACTIVE_LOW>,
		            <&gpioa  10 GPIO_ACTIVE_LOW>,
		            <&gpioh  3  GPIO_ACTIVE_LOW>;
		row-gpios = <&gpiob  5 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>,
		            <&gpiob  4 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>,
		            <&gpiob  3 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>,
		            <&gpioa 15 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>,
		            <&gpioa 14 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>,
		            <&gpioa 13 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>;
	};

  /* TODO(ibash) this */
	default_transform: keymap_transform {
		compatible = "zmk,matrix-transform";
		columns = <16>;
		rows = <6>;
    /* ref: keyboard/keychron/q3/ansi/info.json */
		map = <
			RC(0,0)         RC(0,1) RC(0,2) RC(0,3) RC(0,4) RC(0,5) RC(0,6) RC(0,7) RC(0,8) RC(0,9)  RC(0,10) RC(0,11) RC(0,12) RC(0,14) RC(0,15) RC(3,14)
			RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4) RC(1,5) RC(1,6) RC(1,7) RC(1,8) RC(1,9) RC(1,10) RC(1,11) RC(1,12) RC(1,13) RC(1,14) RC(1,15) RC(3,15)
			RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4) RC(2,5) RC(2,6) RC(2,7) RC(2,8) RC(2,9) RC(2,10) RC(2,11) RC(2,12) RC(2,13) RC(2,14) RC(2,15) RC(3,12)
			RC(3,0) RC(3,1) RC(3,2) RC(3,3) RC(3,4) RC(3,5) RC(3,6) RC(3,7) RC(3,8) RC(3,9) RC(3,10) RC(3,11)          RC(3,13)
			RC(4,0)         RC(4,2) RC(4,3) RC(4,4) RC(4,5) RC(4,6) RC(4,7) RC(4,8) RC(4,9) RC(4,10) RC(4,11)          RC(4,13)          RC(4,15)
			RC(5,0) RC(5,1) RC(5,2)                         RC(5,6)                         RC(5,10) RC(5,11) RC(5,12) RC(5,13) RC(5,14) RC(5,15) RC(4,14)
		>;
	};

  /*
	encoder: encoder {
		compatible = "alps,ec11";
		label = "ENCODER";
		a-gpios = <&gpioa 10 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>;
		b-gpios = <&gpioa 8 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>;
	};
  */

	led_strip: led-strip-composite {
		compatible = "zmk,led-strip-composite";

		chain-length = <87>;

		strip-0 {
			led-strip = <&led_strip_0>;
		};

		strip-1 {
			led-strip = <&led_strip_1>;
		};
	};
};

&clk_hsi {
	status = "okay";
};

&pll {
	div-m = <1>;
	mul-n = <10>;
	div-p = <7>;
	div-q = <2>;
	div-r = <2>;
	clocks = <&clk_hsi>;
	status = "okay";
};

&rcc {
	clocks = <&pll>;
	clock-frequency = <DT_FREQ_M(80)>;
	ahb-prescaler = <1>;
	apb1-prescaler = <1>;
	apb2-prescaler = <1>;
};

/** TODO(ibash) probably worth double checking this... assuming that the q1v2
* and q3 are basically the same **/
&sram0 {
	reg = <0x20000000 DT_SIZE_K(48)>;
};

&flash0 {
	reg = <0x8000000 DT_SIZE_K(128)>;

	partitions {
		compatible = "fixed-partitions";
		#address-cells = <1>;
		#size-cells = <1>;

		code_partition: partition@0 {
			label = "code_partition";
			reg = <DT_SIZE_K(0) DT_SIZE_K(124)>;
		};

		storage_partition: partition@1f000 {
			label = "storage";
			reg = <DT_SIZE_K(124) DT_SIZE_K(4)>;
		};
	};
};

&usb {
	status = "okay";
};

/* ref: q3/ansi/ansi.c */
&i2c1 {
  /* TODO(ibash) check pin for led */
	pinctrl-0 = <&i2c1_scl_pb6 &i2c1_sda_pb7>;
	pinctrl-names = "default";
	status = "okay";

	clock-frequency = <DT_FREQ_K(400)>;

	led_strip_0: ckled2001@77 {
		compatible = "keychron,ckled2001";

    /* TODO(ibash) check register here */
		reg = <0x77>;
		chain-length = <47>;
		#led-strip-cells = <0>;

    /* NOTE(ibash) these values are 1 less than the qmk counterparts (0-indexed
       here, 1-indexed in qmk) */
		map = <
			/* ROW 0 */
			/* R        G        B */
      CK(8,0)  CK(6,0)  CK(7,0)
      CK(8,1)  CK(6,1)  CK(7,1)
      CK(8,2)  CK(6,2)  CK(7,2)
      CK(8,3)  CK(6,3)  CK(7,3)
      CK(8,4)  CK(6,4)  CK(7,4)
      CK(8,5)  CK(6,5)  CK(7,5)
      CK(8,6)  CK(6,6)  CK(7,6)
      CK(8,7)  CK(6,7)  CK(7,7)
      CK(8,8)  CK(6,8)  CK(7,8)
      CK(8,9)  CK(6,9)  CK(7,9)
      CK(8,10) CK(6,10) CK(7,10)
      CK(8,11) CK(6,11) CK(7,11)
      CK(8,12) CK(6,12) CK(7,12)
      CK(8,14) CK(6,14) CK(7,14)
      CK(8,15) CK(6,15) CK(7,15)

      /* TODO(ibash) end of row 1 is on the other driver...
      {1, CB9_CA15,   CB7_CA15,   CB8_CA15},*/

			/* ROW 1 */
			/* R        G        B */
      CK(2,0)  CK(0,0)  CK(1,0)
      CK(2,1)  CK(0,1)  CK(1,1)
      CK(2,2)  CK(0,2)  CK(1,2)
      CK(2,3)  CK(0,3)  CK(1,3)
      CK(2,4)  CK(0,4)  CK(1,4)
      CK(2,5)  CK(0,5)  CK(1,5)
      CK(2,6)  CK(0,6)  CK(1,6)
      CK(2,7)  CK(0,7)  CK(1,7)
      CK(2,8)  CK(0,8)  CK(1,8)
      CK(2,9)  CK(0,9)  CK(1,9)
      CK(2,10) CK(0,10) CK(1,10)
      CK(2,11) CK(0,11) CK(1,11)
      CK(2,12) CK(0,12) CK(1,12)
      CK(2,13) CK(0,13) CK(1,13)
      CK(2,14) CK(0,14) CK(1,14)
      CK(2,15) CK(0,15) CK(1,15)

      /* TODO(ibash) this {1, CB9_CA16,   CB7_CA16,   CB8_CA16}, */

			/* ROW 2 */
			/* R        G        B */
      CK(5,0)  CK(3,0)  CK(4,0)
      CK(5,1)  CK(3,1)  CK(4,1)
      CK(5,2)  CK(3,2)  CK(4,2)
      CK(5,3)  CK(3,3)  CK(4,3)
      CK(5,4)  CK(3,4)  CK(4,4)
      CK(5,5)  CK(3,5)  CK(4,5)
      CK(5,6)  CK(3,6)  CK(4,6)
      CK(5,7)  CK(3,7)  CK(4,7)
      CK(5,8)  CK(3,8)  CK(4,8)
      CK(5,9)  CK(3,9)  CK(4,9)
      CK(5,10) CK(3,10) CK(4,10)
      CK(5,11) CK(3,11) CK(4,11)
      CK(5,12) CK(3,12) CK(4,12)
      CK(5,13) CK(3,13) CK(4,13)
      CK(5,14) CK(3,14) CK(4,14)
      CK(5,15) CK(3,15) CK(4,15)

      /* TODO(ibash) this {1, CB9_CA13,   CB7_CA13,   CB8_CA13},*/
		>;
	};

	led_strip_1: ckled2001@74 {
		compatible = "keychron,ckled2001";

		reg = <0x74>;
		chain-length = <40>;
		#led-strip-cells = <0>;

		map = <
			/* ROW 3 */
			/* R        G        B */
      CK(8,0)  CK(6,0)  CK(7,0)
      CK(8,1)  CK(6,1)  CK(7,1)
      CK(8,2)  CK(6,2)  CK(7,2)
      CK(8,3)  CK(6,3)  CK(7,3)
      CK(8,4)  CK(6,4)  CK(7,4)
      CK(8,5)  CK(6,5)  CK(7,5)
      CK(8,6)  CK(6,6)  CK(7,6)
      CK(8,7)  CK(6,7)  CK(7,7)
      CK(8,8)  CK(6,8)  CK(7,8)
      CK(8,9)  CK(6,9)  CK(7,9)
      CK(8,10) CK(6,10) CK(7,10)
      CK(8,11) CK(6,11) CK(7,11)
      CK(8,13) CK(6,13) CK(7,13)

			/* ROW 4 */
			/* R        G        B */
      CK(2,0)  CK(0,0)   CK(1,0)
      CK(2,2)  CK(0,2)   CK(1,2)
      CK(2,3)  CK(0,3)   CK(1,3)
      CK(2,4)  CK(0,4)   CK(1,4)
      CK(2,5)  CK(0,5)   CK(1,5)
      CK(2,6)  CK(0,6)   CK(1,6)
      CK(2,7)  CK(0,7)   CK(1,7)
      CK(2,8)  CK(0,8)   CK(1,8)
      CK(2,9)  CK(0,9)   CK(1,9)
      CK(2,10) CK(0,10)  CK(1,10)
      CK(2,11) CK(0,11)  CK(1,11)
      CK(2,13) CK(0,13)  CK(1,13)
      CK(2,15) CK(0,15)  CK(1,15)

			/* ROW 5 */
			/* R        G        B */
      CK(5,0)  CK(3,0)  CK(4,0)
      CK(5,1)  CK(3,1)  CK(4,1)
      CK(5,2)  CK(3,2)  CK(4,2)
      CK(5,6)  CK(3,6)  CK(4,6)
      CK(5,10) CK(3,10) CK(4,10)
      CK(5,11) CK(3,11) CK(4,11)
      CK(5,12) CK(3,12) CK(4,12)
      CK(5,13) CK(3,13) CK(4,13)
      CK(5,14) CK(3,14) CK(4,14)
      CK(5,15) CK(3,15) CK(4,15)
      CK(2,14) CK(0,14) CK(1,14)

      /* Last 3 LEDS from the first strip i.e. these guys in qmk:
         {1, CB9_CA15,   CB7_CA15,   CB8_CA15},
         {1, CB9_CA16,   CB7_CA16,   CB8_CA16}, 
         {1, CB9_CA13,   CB7_CA13,   CB8_CA13},

         Definitely introducing a bug by putting them here, but need to figure
         out the right spot.
      */

			/* R        G        B */
      CK(8,14) CK(6,14) CK(7,14)
      CK(8,15) CK(6,15) CK(7,15) 
      CK(8,12) CK(6,12) CK(7,12)
		>;
	};
};
